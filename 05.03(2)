        print (number)
   
    


# Завдання 6
def check_sequence(sequence):
    for i in range(len(sequence) - 1):
        if sequence[i] == '0' and sequence[i + 1] == '1':
            continue
        elif sequence[i] == '1' and sequence[i + 1] == '0':
            continue
        else:
            return False
    return True


sequence = "00110101010"

print(check_sequence(sequence)) 
 


